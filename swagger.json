    "/api/restaurants": {
      "get": {
        "summary": "Get all restaurants with sorting and pagination",
        "tags": [
          "Restaurants"
        ],
        "parameters": [
          {
            "in": "query",
            "name": "page",
            "schema": {
              "type": "integer",
              "default": 1
            },
            "description": "Page number for pagination"
          },
          {
            "in": "query",
            "name": "limit",
            "schema": {
              "type": "integer",
              "default": 10
